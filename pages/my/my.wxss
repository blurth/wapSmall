@import "../tpls/base.wxss";

.my-container{
    background-color:#EDEDED;
}
.my-header{
    background-color: #935d99;
    color: #fff;
    display: flex;
    align-items: center;
    padding: 30rpx;
    font-size: 28rpx;
}
.my-header image{
    height: 132rpx;
    width: 132rpx;
    border-radius: 100rpx;
}
.my-header text{
    margin-left: 20rpx;
}

.my-menu-nav {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

.my-menu-nav image {
  display: block;
  margin: 0 auto;
}

.my-counts image {
  margin-top: 35rpx;
}

.my-menu image {
  margin-top: 17rpx;
}

.my-menu-nav text {
  font-size: 26rpx;
  color: #080808;
}

.my-counts {
  width: 100%;
  height: 150rpx;
  margin: 20rpx 0rpx;
  background: #fff;
}


.my-menu {
  width: 100%;
  padding: 30rpx 0rpx 0rpx;
