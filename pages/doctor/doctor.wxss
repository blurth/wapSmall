
.container {
  padding-bottom: 0rpx;
}

.doc-list-top {
  width: 100%;
  padding: 16rpx 0rpx;
  background: #fff;
}

.doc-search {
  width: 711rpx;
  height: 60rpx;
  margin: 0 auto;
  line-height: 60rpx;
  position: relative;
}

.doc-search input {
  width: 690rpx;
  height: 100%;
  background: #f5f5f5;
  border: 1px solid #dcdcdc;
  border-radius: 8rpx;
  padding-left: 21rpx;
  font-size: 24rpx;
  color: #888788;
}

.placeholder {
  font-size: 22rpx;
  color: #888788;
  margin-left: 11rpx;
}

.search-button {
  width: 153rpx;
  height: 41rpx;
  line-height: 41rpx;
  border-left: 1px solid #dbdbdb;
  text-align: center;
  position: absolute;
  top: 16rpx;
  right: 0;
  z-index: 2;
}

.search-button .search-img {
  width: 32rpx;
  height: 32rpx;
  margin-top: 4rpx;
  margin-right: 20rpx;
}

.search-txt {
  display: inline-block;
  font-size: 26rpx;
  color: #ad7823;
  vertical-align: 6rpx;
}

.scroll-tabs {
  display: flex;
  white-space: nowrap;
}

.tabs-box {
  width: 711rpx;
  margin: 0 auto;
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tabs-item {
  display: inline-block;
  width: 25%;
  text-align: center;
}

.tabs-item text {
  display: inline-block;
  height: 40rpx;
  font-size: 24rpx;
  color: #101010;
}

.tabs-item.selected text {
  color: #ad7823;
  border-bottom: 3rpx solid #ad7823;
}

.tabs-detail{
  margin-top: 20rpx;
  min-height: 100vh;
}