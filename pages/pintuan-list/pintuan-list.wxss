

.header-container {
    background-color: #fff;
}

.iphone {
    margin-top: 180rpx;
}

.pingtuan-list {
    border-bottom: 1px solid #f5f5f5;
    width: 100%;
    height: 280rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
    padding-bottom: 10rpx;
    display: flex;
    align-items: center;
}

.pingtuan-image {
    float: left;
    width: 40%;
    height: 280rpx;
    overflow: hidden;
    text-align: center;
    display: flex;
    align-items: center;
}

.pingtuan-image image {
    width: 240rpx;
    height: 240rpx;
    display: block;
    margin: 0 auto;
    border-radius: 10rpx;
}

.pingtuan-info {
    display: inline-block;
    width: 56%;
    height: 240rpx;
    overflow: hidden;
    position: relative;
}

.pingtuan-title {
    font-size: 30rpx;
    color: #333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 6rpx;
}

.pingtuan-tetx {
    font-size: 26rpx;
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pingtuan-sales {
    font-size: 26rpx;
    margin-top: 6rpx;
    color: #999;
}

.pingtuan-sales text {
    color: #b5272d;
    margin-left: 4rpx;
    margin-right: 4rpx;
    font-size: 30rpx;
}

.pingtuan-old-money {
    font-size: 26rpx;
    color: #999;
    margin-top: 20rpx;
}

.pingtuan-old-money text {
    text-decoration: line-through;
}

.pingtuan-new-money {
    font-size: 40rpx;
    color: #b5272d;
}

.pingtuan-new-money text {
    font-size: 26rpx;
    margin-right: 6rpx;
}

.pingtuan-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    background-color: #b5272d;
    color: #fff;
    width: 130rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    border-radius: 8rpx;
}